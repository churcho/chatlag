<%= form_for @changeset, @action, fn f -> %>
<%= if @changeset.action do %>
<div class="alert alert-danger">
  <p>Oops, something went wrong! Please check the errors below.</p>
</div>
<% end %>

<%= PBF.textarea f, :content, label: [text: gettext("reserved words with comma")] %>

<div>
  <% cancel = link gettext("Back"), to: Routes.word_path(@conn, :index), class: "btn btn-link" %>
  <%= PBF.submit f, gettext("Save"), class: "btn-primary", alternative: cancel %>
</div>
<% end %>